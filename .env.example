# Django Settings
DEBUG=True
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# SQLite (par défaut)
# DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (recommandé pour production)
DATABASE_URL=postgresql://user:password@localhost:5432/oculomotor
# DATABASE_URL=postgresql://user:password@db:5432/oculomotor  # Docker

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-random-jwt-secret-key

# Frontend Settings
REACT_APP_API_URL=http://localhost:8000/api
NODE_ENV=development

# Email Configuration (optionnel)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Machine Learning (optionnel)
ML_MODEL_PATH=backend/ml_models/
ENABLE_ML=False

# Security
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Logging
LOG_LEVEL=INFO

# Redis (optionnel - pour cache/sessions)
REDIS_URL=redis://localhost:6379/0

# AWS S3 (optionnel - pour stockage fichiers)
USE_S3=False
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=eu-west-1
