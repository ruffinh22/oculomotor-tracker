{
  "name": "eye-tracking-clinical",
  "version": "1.0.0",
  "description": "Application web de suivi oculaire pour clinique orthoptiste",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "build": "tsc && npm run build:css",
    "build:watch": "tsc --watch",
    "build:css": "postcss -i ./src/globals.css -o ./public/styles-tailwind.css",
    "build:css:watch": "postcss -i ./src/globals.css -o ./public/styles-tailwind.css --watch",
    "serve": "tsx src/server.ts",
    "build:prod": "tsc --strict && npm run build:css",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.27.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "eye-tracking",
    "gaze",
    "clinical",
    "orthoptiste"
  ],
  "author": "Ruf",
  "license": "MIT"
}
