# Production Environment - stackwarriors.dev
# IMPORTANT: Change all sensitive values before deploying!

# Django Settings
DEBUG=False
SECRET_KEY=CHANGE-THIS-TO-A-VERY-LONG-RANDOM-SECRET-KEY-IN-PRODUCTION
ALLOWED_HOSTS=stackwarriors.dev,www.stackwarriors.dev

# Database Configuration
# PostgreSQL Production Database
DATABASE_URL=postgresql://tracker:CHANGE_PASSWORD_HERE@db:5432/oculomotor_prod

# CORS Settings
CORS_ALLOWED_ORIGINS=https://stackwarriors.dev,https://www.stackwarriors.dev

# JWT Authentication
JWT_SECRET_KEY=CHANGE-THIS-TO-A-VERY-LONG-RANDOM-JWT-SECRET-KEY

# Frontend Settings
REACT_APP_API_URL=https://stackwarriors.dev/api
NODE_ENV=production

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@stackwarriors.dev

# Security - HTTPS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Machine Learning
ML_MODEL_PATH=/app/ml_models/
ENABLE_ML=True

# Logging
LOG_LEVEL=WARNING
SENTRY_DSN=  # Optional: Sentry error tracking

# Redis - Cache & Sessions
REDIS_URL=redis://redis:6379/0

# AWS S3 - File Storage (optional)
USE_S3=False
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=eu-west-1

# Backup Configuration (optional)
BACKUP_ENABLED=True
BACKUP_PATH=/app/backups/
BACKUP_FREQUENCY=daily

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600
